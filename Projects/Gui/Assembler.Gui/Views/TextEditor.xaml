<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assembler.Gui.Views"
             xmlns:ViewModel="clr-namespace:Assembler.Gui.ViewModel" x:Class="Assembler.Gui.Views.TextEditor"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Path=Text, Mode=TwoWay}" Background="White" Height="300" Width="300">
            <TextBlock.DataContext>
                <ViewModel:FileViewModel/>
            </TextBlock.DataContext>
        </TextBlock>

    </Grid>
</UserControl>
